{
    "manifest_version": 2,
    "name": "屏蔽知乎登录框",
    "version": "1.0",
    "description": "屏蔽知乎登录框",
    "content_scripts": [
        {
            "matches": ["*://www.zhihu.com/*"],
            "js": ["js/dis.js"],
            "run_at":"document_idle"
        }
    ],
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },
    "browser_action": {
        "default_icon": {
            "19": "images/icon19.png",
            "38": "images/icon38.png"
        },
        "default_title": "屏蔽知乎登录框",
        "default_popup": "popup.html"
    }
}